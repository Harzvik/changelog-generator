{
  "name": "changelog-generator",
  "version": "1.0.0",
  "description": "CLI to compare two directories of Minecraft mod .jar files and generate Added/Updated/Removed changelogs.",
  "type": "module",
  "main": "electron/main.js",
  "bin": {
    "changelog-generator": "./bin/mod-diff.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node ./bin/mod-diff.js",
    "start:gui": "electron ./electron/main.js",
    "dist": "electron-builder",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.js\" \"bin/**/*.js\"",
    "format": "prettier --write ."
  },
  "keywords": [
    "minecraft",
    "mods",
    "diff",
    "changelog",
    "jar",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.0.0",
    "vitest": "^4.0.4",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "productName": "Changelog Generator",
    "appId": "com.harzvik.changelog-generator",
    "asar": true,
    "directories": {
      "buildResources": "public/icons"
    },
    "win": {
      "icon": "public/icons/app.ico"
    },
    "mac": {
      "icon": "public/icons/app.icns"
    },
    "linux": {
      "icon": "public/icons/png/icon-512.png"
    },
    "files": [
      "**/*",
      "!test/**",
      "!scripts/**",
      "!dist/**"
    ]
  }
}
